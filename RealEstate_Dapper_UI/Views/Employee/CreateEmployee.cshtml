 @model CreateEmployeeDto
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
           <h6 class="mb-4 text-center">Yeni Personel Girişi</h6>
            <form method="post">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" asp-for="Name" placeholder="Personel İsmi">
                    <label for="Name">Personel İsmi</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" asp-for="Title" placeholder="Unvan">
                    <label for="Title">Unvan</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" asp-for="Mail" placeholder="Mail Adresi">
                    <label for="Mail">Mail Adresi</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Telefon Numarası">
                    <label for="PhoneNumber">Telefon Numarası</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Fotoğraf">
                    <label for="ImageUrl">Fotoğraf</label>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-4">Personel Kaydet</button>
            </form>
        </div>
    </div>
</div>