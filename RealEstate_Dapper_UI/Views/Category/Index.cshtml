@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Kategori Listesi</h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col">Kategori Durum</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                            <tr>
                                <th scope="row">@item.CategoryId</th>
                                <td>@item.CategoryName</td>
                                <td>
                                    @if (@item.CategoryStatus)
                                    {
                                        <span>
                                            Aktif
                                        </span>
                                    }else
                                    {
                                        <span>
                                            Pasif
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <a href="/Category/CreateCategory" class="btn btn-outline-info">Yeni Kategori</a>
                </table>
            </div>
        </div>
    </div>
</div>